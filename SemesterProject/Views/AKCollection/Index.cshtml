@model SemesterProject.Models.Shopping

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>A.K Online Collection</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A.K Online Collection Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Scripts/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Scripts/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/styles/responsive.css">
</head>
<body>
    <!-- Header -->

    <header class="header trans_300">

        <!-- Top Navigation -->

        <div class="top_nav">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="top_nav_left">free shipping on all Pakistan orders over PKR2000</div>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="top_nav_right">
                            <ul class="top_nav_menu">

                                <!-- Currency / Language / My Account -->

                                <li class="currency">
                                    <a href="#">
                                        PKR
                                        <i class="fa fa-angle-down"></i>
                                    </a>
                                    <ul class="currency_selection">
                                        <li><a href="">PKR</a></li>
                                        <li><a href="">cad</a></li>
                                        <li><a href="">aud</a></li>
                                        <li><a href="">eur</a></li>
                                        <li><a href="">gbp</a></li>
                                    </ul>
                                </li>
                                <li class="language">
                                    <a href="#">
                                        English
                                        <i class="fa fa-angle-down"></i>
                                    </a>
                                    <ul class="language_selection">
                                        <li><a href="">French</a></li>
                                        <li><a href="">Italian</a></li>
                                        <li><a href="">German</a></li>
                                        <li><a href="">Spanish</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Navigation -->

        <div class="main_nav_container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-right">
                        <div class="logo_container">
                            <a href="#">A.K<span> Online Collection</span></a>
                        </div>
                        <nav class="navbar">
                            <ul class="navbar_menu">
                                <li><a href="/AKCollection/Index">Home</a></li>
                                <li><a href="/AKCollection/AddItem">Add Item</a></li>
                               
                            </ul>

                        </nav>
                    </div>
                </div>
            </div>
        </div>

    </header>

    <div class="container">
        <br />
    <h2 style="text-align:center"><font color="Red">View Brands Details</font></h2>
    <br />
        <table align="center" border="1" cellspacing="100">
            <tr>
                <th align="center">&nbsp&nbsp&nbspId&nbsp&nbsp&nbsp</th>
                <th align="center">&nbsp&nbsp&nbspBrand Name&nbsp&nbsp&nbsp</th>
                <th align="center">&nbsp&nbsp&nbspBrand Code&nbsp&nbsp&nbsp</th>
                <th align="center">&nbsp&nbsp&nbspSize&nbsp&nbsp&nbsp</th>
                <th align="center">&nbsp&nbsp&nbspColour&nbsp&nbsp&nbsp</th>
                <th align="center">&nbsp&nbsp&nbspDescription&nbsp&nbsp&nbsp</th>
                <th align="center">&nbsp&nbsp&nbspPrice&nbsp&nbsp&nbsp</th>
                <th align="center">&nbsp&nbsp&nbspAction&nbsp&nbsp&nbsp</th>
            </tr>
            @foreach(SemesterProject.Models.Shopping s in ViewBag.data)
             {
             <tr>
                <td>@s.Id</td>
                <td>@s.brandName</td>
                <td>@s.code</td>
                <td>@s.size</td>
                <td>@s.color</td>
                <td>@s.description</td>
                <td>@s.price</td>
                <td>
                    <a href="/AKCollection/Edit/@s.Id">Edit</a>
                    &nbsp&nbsp<a href="/AKCollection/Delete/@s.Id">Delete</a>
                </td>
             </tr>
             }


        </table>
    </div>

    <!-- Footer -->

    <footer class="footer">
        <div class="container">
            <div class="row">

                <div class="col-lg-6">
                    <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                        <ul>
                            <li><a href="https://www.facebook.com/AkOnlineCollec1/"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                            <li><a href="https://www.twitter.com/AkOnlineCollec/"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                            <li><a href="https://www.instagram.com/AkOnlineCollec/"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer_nav_container">
                        <div class="cr">©2020 All Rights Reserverd. This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="#">A.K Solutions</a></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/Scripts/js/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/styles/bootstrap4/popper.js"></script>
    <script src="~/Scripts/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/Scripts/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Scripts/plugins/easing/easing.js"></script>
    <script src="~/Scripts/js/custom.js"></script>
</body>